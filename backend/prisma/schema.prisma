// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(cuid())
  email       String @unique
  name        String?
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Premium subscription fields
  subscriptionStatus String @default("free") // "free", "premium", "cancelled", "expired"
  subscriptionId String? // PayPal subscription ID
  subscriptionStartDate DateTime?
  subscriptionEndDate DateTime?
  paypalCustomerId String?
  
  itineraries Itinerary[]
  reservations Reservation[]
  packingLists PackingList[]
  payments Payment[]
  
  // Sharing relations
  sharesCreated ItineraryShare[] @relation("ShareCreator")
  collaborations ItineraryCollaborator[]
  collaborationsAdded ItineraryCollaborator[] @relation("CollaboratorAdder")
}

model Itinerary {
  id          String @id @default(cuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  destination String
  vacationStyle String? // JSON string of vacation style preferences
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  days        Day[]
  reservations Reservation[]
  packingList PackingList?
  
  // Sharing relations
  shares      ItineraryShare[]
  collaborators ItineraryCollaborator[]
}

model Day {
  id          String @id @default(cuid())
  date        DateTime
  dayNumber   Int
  activities  String // JSON string of activity objects
  meals       String? // JSON string of meal recommendations (breakfast, lunch, dinner)
  notes       String?
  
  itineraryId String
  itinerary   Itinerary @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
}

model Reservation {
  id          String @id @default(cuid())
  type        String // "flight", "hotel", "restaurant", "activity", etc.
  title       String
  description String?
  date        DateTime
  time        String?
  confirmationNumber String?
  cost        Float?
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itineraryId String?
  itinerary   Itinerary? @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
}

model PackingList {
  id          String @id @default(cuid())
  items       String // JSON string of packing item objects
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  userId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  itineraryId String @unique
  itinerary   Itinerary @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
}

model ItineraryShare {
  id          String @id @default(cuid())
  shareToken  String @unique
  permissions String @default("read") // "read", "edit", "admin"
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  
  itineraryId String
  itinerary   Itinerary @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  
  createdById String
  createdBy   User @relation("ShareCreator", fields: [createdById], references: [id], onDelete: Cascade)
}

model ItineraryCollaborator {
  id          String @id @default(cuid())
  permissions String @default("edit") // "read", "edit", "admin"
  addedAt     DateTime @default(now())
  
  itineraryId String
  itinerary   Itinerary @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  
  userId      String
  user        User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  addedById   String
  addedBy     User @relation("CollaboratorAdder", fields: [addedById], references: [id], onDelete: Cascade)
  
  @@unique([itineraryId, userId])
}

model Payment {
  id                String @id @default(cuid())
  paypalOrderId     String @unique
  paypalPaymentId   String?
  amount            Float
  currency          String @default("USD")
  status            String // "pending", "completed", "failed", "cancelled", "refunded"
  type              String // "one-time", "subscription", "upgrade"
  description       String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  userId            String
  user              User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // PayPal specific data
  paypalData        String? // JSON string of PayPal response
}

model SubscriptionPlan {
  id          String @id @default(cuid())
  name        String // "Premium Monthly", "Premium Yearly"
  description String?
  price       Float
  currency    String @default("USD")
  interval    String // "month", "year"
  paypalPlanId String @unique // PayPal plan ID
  features    String // JSON array of features
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
